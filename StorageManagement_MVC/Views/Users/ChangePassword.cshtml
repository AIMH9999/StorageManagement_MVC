@model StorageManagement_MVC.ViewModels.ChangePasswordVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container-fluid pt-4 px-4">
    <div class="container-fluid pt-4 px-4">
        <div class="bg-light rounded h-100 p-4">
            <h6 class="mb-4">Change Password</h6>
            <form asp-action="ChangePassword">                
                <div class="form-floating mb-3">
                    <input asp-for="@Model.OldPassword" class="form-control" id="floatingPassword">
                    <label for="floatingInput">Old password</label>
                </div>
                <div class="form-floating mb-4">
                    <input asp-for="@Model.NewPassword" class="form-control" id="floatingPassword" type="password">
                    <label for="floatingInput">New password</label>
                </div>
                <div class="form-floating mb-4">
                    <input asp-for="@Model.ConfirmPassword" class="form-control" id="floatingPassword" type="password">
                    <label for="floatingInput">Confirm new password</label>
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group d-flex justify-content-between">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="Profile" class="col text-end">Back to profile</a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
