@model StorageManagement_MVC.ViewModels.LoginVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<form asp-action="Login" asp-route-returnUrl="@ViewBag.ReturnUrl">
<div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
    <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
        <div class="bg-light rounded p-4 p-sm-5 my-4 mx-3">
            <div class="d-flex align-items-center justify-content-between mb-3">
                <a href="#" class="">
                        <h3 class="text-primary">Long StorageManagement</h3>
                </a>
            </div>
                <div class="d-flex align-items-center justify-content-between mb-3">                  
                    <h3>Sign In</h3>
                </div>
                
            <div class="form-floating mb-3">
                <input asp-for = "@Model.Username" class="form-control" id="floatingInput">              
                <label for="floatingInput">Username</label>
            </div>
            <div class="form-floating mb-4">
                    <input asp-for="@Model.Password" class="form-control" id="floatingPassword" type="password">                  
                <label for="floatingPassword">Password</label>
            </div>
                <div asp-validation-summary="All" class="text-danger mb-3"></div>
            <button asp-action="Login" asp-controllerUsers type="submit" class="btn btn-primary py-3 w-100 mb-4">Sign In</button>
        </div>
    </div>
</div>
</form>