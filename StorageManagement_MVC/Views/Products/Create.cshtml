@model StorageManagement.Models.Product

@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid col-sm-12 col-xl-6">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Add product</h6>
        <form asp-action="Create">          
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Product name</label>
                    <div class="col-sm-10">
                        <input asp-for="Name" class="form-control" id="ProductName">
                    <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Product Category</label>
                    <div class="col-sm-10">
                        <input asp-for="Category" class="form-control" id="ProductCategory">
                    <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Price</label>
                    <div class="col-sm-10">
                        <input asp-for="priceInput" class="form-control" id="InputPrice">
                    <span asp-validation-for="priceInput" class="text-danger"></span>
                    </div>
                </div>            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}