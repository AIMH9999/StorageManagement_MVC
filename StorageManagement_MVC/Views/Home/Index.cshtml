@model StorageManagement_MVC.Models.HomePageViewModel
@{
    ViewData["Title"] = "Home Page";
}
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-6 col-xl-3">
            <div class="bg-light rounded d-flex align-items-center p-4">
                <i class="fas fa-user-tie fa-3x text-primary"></i>
                <div class="ms-3">
                    <p class="mb-2">Users</p>
                    <h6 class="mb-0">@Model.TotalUsers</h6>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="bg-light rounded d-flex align-items-center p-4">
                <i class="fas fa-archive fa-3x text-primary"></i>
                <div class="ms-3">
                    <p class="mb-2">Products</p>
                    <h6 class="mb-0">@Model.TotalProducts</h6>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="bg-light rounded d-flex align-items-center p-4">
                <i class="fas fa-clipboard fa-3x text-primary"></i>
                <div class="ms-3">
                    <p class="mb-2">Receipts</p>
                    <h6 class="mb-0">@Model.TotalReceipts</h6>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="bg-light rounded d-flex align-items-center p-4">
                <i class="fas fa-warehouse fa-3x text-primary"></i>
                <div class="ms-3">
                    <p class="mb-2">Total products quantity in stock</p>
                    <h6 class="mb-0">@Model.TotalQuantityProducts</h6>
                </div>
            </div>
        </div>
    </div>
</div>

