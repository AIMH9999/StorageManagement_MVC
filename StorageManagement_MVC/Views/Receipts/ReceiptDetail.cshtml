@model IEnumerable<StorageManagement.Models.ReceiptDetail>

@{
    ViewData["Title"] = "ProductList";
}
<div class="container-fluid pt-4 px-4">
    <div class="container-fluid pt-4 px-4">
        <div class="bg-light rounded h-100 p-4">
            <h6 class="mb-4">Receipt detail</h6>
            <form asp-controller="Receipts" asp-action="ReceiptDetail" class="d-none d-md-flex ms-4">
                <input class="form-control border-0" type="search" placeholder="Search" name="SearchString" />
            </form>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Receipt</th>
                        <th scope="col">ID product</th>
                        <th scope="col">Product name</th>
                        <th scope="col">Product category</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Total price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@Html.DisplayFor(modelItem => item.Id)</th>
                            <td>@Html.DisplayFor(modelItem => item.idReceipt)</td>
                            <td>@Html.DisplayFor(modelItem => item.idProduct)</td>
                            <td>@Html.DisplayFor(modelItem => item.productName)</td>
                            <td>@Html.DisplayFor(modelItem => item.productCategory)</td>
                            <td>@Html.DisplayFor(modelItem => item.quantity)</td>
                            <td>@Html.DisplayFor(modelItem => item.totalPrice)VNĐ</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
